@inject SignInManager<IdentityUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/font/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/simplePagination.js/1.4/simplePagination.css" integrity="sha512-emkhkASXU1wKqnSDVZiYpSKjYEPP8RRG2lgIxDFVI4f/twjijBnDItdaRh7j+VRKFs4YzrAcV17JeFqX+3NVig==" crossorigin="anonymous" />

</head>
<body>
    <header>
        <nav class="navbar navbar-fixed-top sticky-top navbar-expand-md navbar-light bg-light mb-3">
            <div class="container-fluid">
                <a class="navbar-brand mr-3" asp-area="" asp-controller="Store" asp-action="Index"><img class="rounded-circle" width="55" src="~/images/site/K&C.jpg" alt="KNC"><strong> K&C</strong><font class="text-warning"> Electronic Store</font></a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav">
                        <a asp-controller="Store" asp-action="Index" class="nav-item nav-link active">Home</a>
                    </div>
                    <div class="navbar-nav">
                        <a asp-controller="Store" asp-action="Contact" class="nav-item nav-link active">Contact</a>
                    </div>
                    <div class="navbar-nav ml-auto">

                        @await Component.InvokeAsync("ShoppingCartSummary")


                        @if (signInManager.IsSignedIn(User))
                        {

                            <form method="post" asp-action="Logout" asp-controller="Account">
                                <button type="submit" class="nav-link btn nav-link " style="width:auto">
                                    Logout @User.Identity.Name
                                </button>
                            </form>
                        }
                        else
                        {
                            <a class="nav-item nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            <a class="nav-item nav-link" asp-controller="Account" asp-action="Login">Login</a>

                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">

        @RenderBody()

    </div>

    <footer class="border-top footer">
        <div class="container">

            &copy; 2020 - Powered by <font color="green">Init Myanmar</font>
            <a type="button" class="btn btn-social-icon btn-facebook" style=" margin-top: 10px; color: blue; border-color:blue; border-style: solid; float: right;" href="https://www.facebook.com/KNCES.mm/"><i class="fa fa-facebook"></i></a>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/simplePagination.js/1.4/jquery.simplePagination.min.js" integrity="sha512-J4OD+6Nca5l8HwpKlxiZZ5iF79e9sgRGSf0GxLsL1W55HHdg48AEiKCXqvQCNtA1NOMOVrw15DXnVuPpBm2mPg==" crossorigin="anonymous"></script>   
    <script defer src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script defer src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
