@model IEnumerable<InitCMS.Models.User>

@{
    ViewData["Title"] = "User";
}

<h1>User List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead style="background-color: gainsboro">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmail)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserEmail)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.UserId"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
